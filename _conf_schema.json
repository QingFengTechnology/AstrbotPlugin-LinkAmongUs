{
  "WhitelistGroups": {
    "description": "群聊白名单",
    "type": "list",
    "default": [],
    "hint": "仅在这些群聊中使用本插件，留空则在所有群聊中启用。"
  },
  "MySQLConfig": {
    "type": "object",
    "description": "MySQL设置",
    "hint": "必填，否则插件将无法工作。",
    "obvious_hint": true,
    "items": {
      "MySQLConfig_Address": {
        "type": "string",
        "description": "MySQL地址",
        "hint": "要连接到的MySQL地址。例如127.0.0.1。不要在此处填写端口。",
        "default": "MySQL"
      },
      "MySQLConfig_Port": {
        "type": "int",
        "description": "MySQL端口号",
        "default": 3306
      },
      "MySQLConfig_UserName": {
        "type": "string",
        "description": "MySQL用户名",
        "default": "LinkAmongUs"
      },
      "MySQLConfig_UserPassword": {
        "type": "string",
        "description": "MySQL密码"
      },
      "MySQLConfig_Database": {
        "type": "string",
        "description": "数据库名称",
        "hint": "要写入的MySQL数据库。注意数据库需要已存在于MySQL，插件不会自动创建数据库。",
        "default": "LinkAmongUs"
      }
    }
  },
  "APIConfig": {
    "type": "object",
    "description": "API设置",
    "hint": "必填，否则插件将无法工作。",
    "obvious_hint": true,
    "items": {
      "APIConfig_EndPoint": {
        "type": "string",
        "description": "API端点",
        "hint": "端点末尾不得带有斜杠，需要HTTP(S)协议头。",
        "default": "https://nb.server.qingfengawa.top"
      },
      "APIConfig_ServerName": {
        "type": "string",
        "description": "服务器名称",
        "hint": "向用户传达应加入哪个服务器以完成验证。",
        "default": "清风服[宁波]"
      },
      "APIConfig_Key": {
        "type": "string",
        "description": "API密钥",
        "hint": "此处的API密钥需要您在Nmpostor的数据库中的数据表verifykey创建。"
      }
    }
  },
  "VerifyConfig": {
    "type": "object",
    "description": "验证设置",
    "items": {
      "VerifyConfig_BlackFriendCode": {
        "type": "list",
        "description": "黑名单好友代码",
        "hint": "配置中的好友代码无法用于创建验证请求。",
        "default": [
          "kidcode#6666",
          "nocode#9999"
        ]
      },
      "VerifyConfig_CreateVerfiyConfig": {
        "type": "object",
        "description": "验证创建设置",
        "hint": "/verify create命令的相关配置。",
        "items": {
          "CreateVerfiyConfig_ApiTimeout": {
            "type": "int",
            "description": "请求超时时间",
            "hint": "向API发送请求后多少秒未得到响应就直接认定超时，设定过长可能会影响用户体验。该选项仅可填写1-600秒，出现意外值将回滚为6秒。",
            "default": 6
          },
          "CreateVerfiyConfig_ProcessDuration": {
            "type": "int",
            "description": "验证超时时间",
            "hint": "向API发送请求多少秒后主动标记为验证超时并发送销毁验证请求。由于Nmpostor限制，该选项仅可填写1-600秒，出现意外值将回滚为600秒。",
            "default": 600
          }
        }
      },
      "VerifyConfig_VerifyFinishConfig": {
        "type": "object",
        "description": "验证完成设置",
        "hint": "/verify finish命令的相关配置。",
        "items": {
          "VerifyFinishConfig_AutoCheck": {
            "type": "bool",
            "description": "在超时前自动完成验证",
            "hint": "在超时前1分钟自动尝试完成验证，此功能可防止某些用户忘记使用命令的问题。",
            "default": true
          }
        }
      }
    }
  },
  "HelpConfig": {
    "type": "object",
    "description": "插件帮助设置",
    "hint": "/verify help命令的相关配置。",
    "items": {
      "HelpConfig_Text": {
        "type": "text",
        "description": "帮助文本设置",
        "hint": "设置用户使用/verify help命令后返回的内容。留空视为不启用该命令。"
      }
    }
  }
}